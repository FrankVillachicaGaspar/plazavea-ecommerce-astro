---
import { type Category } from "../db/schema";
interface Props {
  category: Category;
}
const { category }: Props = Astro.props;
---

<a href={`/products/?categoria=${category.id}`} id={category.id.toString()} class="card bg-base-100 w-96 shadow-sm">
  <figure>
    <img src={category.imageUrl} alt="Shoes" />
  </figure>
  <div class="card-body">
    <h2 class="card-title">
      {category.nombre}
    </h2>
  </div>
</a>
