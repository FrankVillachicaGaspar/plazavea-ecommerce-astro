---
import { db } from "../db/db";

const banners = await db.query.banners.findMany({
  orderBy: (banners, { asc }) => [asc(banners.id)],
});
---

<div class="carousel w-full">
  {
    banners.map((banner, index) => {
      const prevIndex = (index - 1 + banners.length) % banners.length;
      const nextIndex = (index + 1) % banners.length;

      return (
        <div id={`slide${index}`} class="carousel-item relative w-full">
          <img class="w-full" src={banner.url} alt={banner.altText} />
          <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
            <a href={`#slide${prevIndex}`} class="btn btn-circle">❮</a>
            <a href={`#slide${nextIndex}`} class="btn btn-circle">❯</a>
          </div>
        </div>
      );
    })
  }
</div>
