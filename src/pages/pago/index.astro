---
import Layout from "../../layouts/Layout.astro";
import ResumenPedido from "../../components/pagos/ResumenPedido.astro";
import FormularioPago from "../../components/pagos/FormularioPago.astro";
---

<Layout>
  <div class="max-w-6xl mx-auto mt-10">
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Resumen del pedido -->
      <ResumenPedido />

      <!-- Formulario de pago -->
      <FormularioPago />
    </div>
  </div>
</Layout>
<style>
  /* Personalizaci√≥n adicional para el tema rojo */
  .bg-primary! {
    background-color: #dc2626;
    border-color: #dc2626;
  }

  .bg-primary!:hover {
    background-color: #b91c1c;
    border-color: #b91c1c;
  }

  .radio-error:checked {
    background-color: #dc2626;
    border-color: #dc2626;
  }

  .checkbox-error:checked {
    background-color: #dc2626;
    border-color: #dc2626;
  }

  .text-red-800 {
    color: #dc2626;
  }

  .input:focus {
    border-color: #dc2626;
    box-shadow: 0 0 0 1px #dc2626;
  }

  .select:focus {
    border-color: #dc2626;
    box-shadow: 0 0 0 1px #dc2626;
  }
</style>
